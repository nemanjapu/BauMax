<!DOCTYPE html>
<html lang="ba">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>@ViewBag.Title - Baumax doo - Sistemi za Vodovod i Kanalizaciju</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1.0, shrink-to-fit=no">
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="manifest" href="/site.webmanifest">
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5">
    <meta name="msapplication-TileColor" content="#da532c">
    <meta name="theme-color" content="#ffffff">
    <meta property="og:image" content="http://www.baumax.ba/Content/images/construction/logo.png">
    <meta property="og:image:type" content="image/png">
    @RenderSection("meta", required: false)
    <meta name="author" content="struix.co">
    @Html.Partial("_PreloadResouresPartial")

    <link href="~/Content/bundle.min.css" rel="stylesheet" />
    <script src="~/Scripts/modernizr-2.8.3.min.js"></script>
    @RenderSection("styles", required: false)
</head>
<body data-spy="scroll" data-target="#sidebar" data-offset="120">
    <div class="body">
        @Html.Partial("_MenuPartial")
        @RenderBody()
        @Html.Partial("_FooterPartial")
    </div>

    <script src="~/Scripts/bundle.min.js"></script>
    @RenderSection("scripts", required: false)
    <script type="application/ld+json">
        {
          "@@context": "https://schema.org",
          "@@type": "Plumber",
          "name": "BauMax DOO",
          "image": "https://www.baumax.ba/Content/images/construction/logo-construction-small.png",
          "@@id": "https://www.baumax.ba/",
          "url": "https://www.baumax.ba/",
          "telephone": "+38760 33 59 356",
          "address": {
            "@@type": "PostalAddress",
            "streetAddress": "Kiseljaci bb",
            "addressLocality": "Srebrenik",
            "postalCode": "75350",
            "addressCountry": "BA"
          },
          "geo": {
            "@@type": "GeoCoordinates",
            "latitude": 44.698537,
            "longitude": 18.495283
          },
          "openingHoursSpecification": {
            "@@type": "OpeningHoursSpecification",
            "dayOfWeek": [
              "Monday",
              "Tuesday",
              "Wednesday",
              "Thursday",
              "Friday",
              "Saturday"
            ],
            "opens": "07:30",
            "closes": "15:30"
          },
          "sameAs": "https://www.facebook.com/BaumaxdooSrebrenik"
        }
    </script>
</body>
</html>