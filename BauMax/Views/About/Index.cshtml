                    <div class="new-basic-property-details-2-widget">
                        @{
                            DateTime today = DateTime.Today;
                            var dates = Enumerable.Range(0, 14).Select(days => today.AddDays(days)).ToList();
                            bool isFirst = true;
                            string selectedDayClass = "selected-day";
                        }
                        <div class="owl-carousel dates-carousel">
                            @foreach (var date in dates)
                            {
                                string monthName = System.Globalization.CultureInfo.CurrentCulture.DateTimeFormat.GetAbbreviatedMonthName(date.Month);
                                if (isFirst)
                                {
                                    isFirst = false;
                                }
                                else
                                {
                                    selectedDayClass = "";
                                }
                                <div data-date="@date.ToString("dd/MM/yyyy", System.Globalization.CultureInfo.InvariantCulture)" class="day-picker @selectedDayClass">
                                    <span>@date.DayOfWeek</span>
                                    <p>@date.Day</p>
                                    <span>@monthName</span>
                                </div>
                            }
                        </div>
